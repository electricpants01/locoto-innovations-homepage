<main class="flex items-center justify-center min-h-screen">
    <div class="bg-white shadow-xl rounded-lg p-8 max-w-3xl text-center">
        <section>
            <h2 class="text-2xl font-semibold text-blue-600 mb-4">Introducción</h2>
